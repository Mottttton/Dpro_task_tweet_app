<%= form_with(model: tweet)  do |form| %>
  <div class="new_tweet_form">
    <% if tweet.errors.any? %>
      <div id="error_explanation">
        <h2>投稿に失敗しました</h2>

        <ul>
          <% tweet.errors.each do |error| %>
            <li><%= error.message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="post_edit">
      <div class="field">
        <%= form.label :content %>
        <%= form.text_area :content %>
      </div>

      <div class="actions">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
